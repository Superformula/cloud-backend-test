{
    "env": {
        "node": true,
        "jest": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jest/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "jest",
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "backtick"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "key-spacing": [
            "error",
            {
                "afterColon": true,
                "beforeColon": false
            }
        ],
        "arrow-parens": [
            "error",
            "always"
        ],
        "arrow-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "require-await": "error",
        "no-unused-vars": "error",
        "no-multi-spaces": "error",
        "space-infix-ops": "error",
        "space-in-parens": [
            2,
            "never"
        ],
        "no-underscore-dangle": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-mixed-spaces-and-tabs": "error",
        "require-jsdoc": [
            "error",
            {
                "require": {
                    "MethodDefinition": true,
                    "ClassDeclaration": true,
                    "FunctionExpression": true,
                    "FunctionDeclaration": true,
                    "ArrowFunctionExpression": true
                }
            }
        ]
    }
}