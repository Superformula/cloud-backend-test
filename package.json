{
  "name": "devclericuzzi-cloud-backend-test",
  "version": "0.0.0",
  "description": "SuperFormula recruitment process test",
  "main": "index.js",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-merge": "npm i",
      "post-checkout": "npm i"
    }
  },
  "lint-staged": {
    "!(*test).js": [
      "npm run lint",
      "jest --bail --findRelatedTests"
    ]
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --ext .js . --fix",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devclericuzzi/cloud-backend-test.git"
  },
  "keywords": [],
  "author": "Pedro Clericuzzi <dev.clericuzzi@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/devclericuzzi/cloud-backend-test/issues"
  },
  "homepage": "https://github.com/devclericuzzi/cloud-backend-test#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.3",
    "@commitlint/config-conventional": "^12.1.3",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.26.0",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}