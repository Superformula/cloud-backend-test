{
  "collectCoverage": false,
  "collectCoverageFrom": ["src/**/*.ts"],
  "setupFilesAfterEnv": ["./src/test/suite-setup.ts"],
  "coveragePathIgnorePatterns": [
    "node_modules",
    "<rootDir>/src/.*/__tests__/",
    "<rootDir>/src/loaders",
    "<rootDir>/src/routes",
    "<rootDir>/src/server/*",
    "<rootDir>/dist"
  ],
  "coverageDirectory": "<rootDir>/coverage/",
  "coverageThreshold": {
    "global": {
      "branches": 20,
      "functions": 30,
      "lines": 50,
      "statements": 50
    }
  },
  "preset": "ts-jest",
  "verbose": true,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
