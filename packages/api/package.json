{
  "name": "api",
  "version": "1.0.0",
  "description": "Superformula api",
  "scripts": {
    "install:dynamodb": "sls dynamodb install",
    "start:offline": "sls offline start",
    "build": "sls package && mv .serverless/sf-api.zip ./terraform/sf-api.zip",
    "deploy": "cd terraform && terraform apply --var-file=./environment/dev.tfvars -auto-approve",
    "destroy": "cd terraform && terraform destroy --var-file=./environment/dev.tfvars -auto-approve",
    "seed:data": "aws dynamodb batch-write-item --request-items file://Users.json"
  },
  "dependencies": {
    "@graphql-tools/merge": "^6.2.13",
    "aws-lambda-graphql": "^1.0.0-alpha.22",
    "axios": "^0.21.1",
    "graphql": "^15.5.0",
    "graphql-subscriptions": "^1.2.1",
    "graphql-tag": "^2.12.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.17",
    "@types/node": "^10.12.18",
    "aws-sdk": "2.897.0",
    "serverless": "2.4.0",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^6.9.0",
    "serverless-plugin-offline-dynamodb-stream": "^1.0.19",
    "serverless-webpack": "^5.4.2",
    "ts-loader": "^5.3.3",
    "webpack": "^4.44.2",
    "webpack-node-externals": "^1.7.2"
  },
  "author": "Douglas Wang"
}
